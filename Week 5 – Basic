CREATE SCHEMA CHALLENGE_5;

CREATE OR REPLACE TABLE CHALLENGE_5 (NUM_COLUMN INT);

INSERT INTO CHALLENGE_5 (NUM_COLUMN)
VALUES (1),(3),(6);

SELECT * FROM CHALLENGE_5;

CREATE OR REPLACE FUNCTION timesthree (NUM_COLUMN INT)
RETURNS INT
LANGUAGE PYTHON
runtime_version = '3.11'
handler = 'TIMESTHREE_py'
as
$$
def TIMESTHREE_py(NUM_COLUMN):
  return NUM_COLUMN*3
$$;


UPDATE CHALLENGE_5
SET NUM_COLUMN = timesthree (NUM_COLUMN);


SELECT timesthree(NUM_COLUMN)
FROM CHALLENGE_5
